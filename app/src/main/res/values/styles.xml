<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>

        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/golden_bg</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/golden_bg</item>
    </style>

    <style name="general_textstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="required_star" parent="general_textstyle">
        <item name="android:textColor">@color/red</item>
        <item name="android:text">*</item>
        <item name="android:layout_marginStart">1dp</item>
    </style>

    <style name="Theme.MyFancyTheme" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/icon_arrow_forward</item>
    </style>
</resources>