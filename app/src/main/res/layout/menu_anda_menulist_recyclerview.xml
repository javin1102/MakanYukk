<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:gravity="center_vertical"
        android:id="@+id/menulist_layout"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/corner_bg"
            android:backgroundTint="@color/light_gray"
            android:id="@+id/menulist_imageview"
            android:layout_marginStart="20dp" />

        <TextView
            style="@style/general_textstyle"
            android:width="190dp"
            android:text="Nasi goreng Belacan Seafood"
            android:singleLine="true"
            android:layout_toRightOf="@id/menulist_imageview"
            android:id="@+id/menulist_menuName_TV"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            style="@style/general_textstyle"
            android:textColor="@color/gray"
            android:layout_below="@id/menulist_menuName_TV"
            android:layout_toEndOf="@id/menulist_imageview"
            android:layout_marginStart="10dp"
            android:id="@+id/menulist_description_TV"
            android:textSize="9sp"
            android:text="Nasi goreng yang dimasak dengan sambal belacan dan seafood. Dimasak dengan rasa cinta"/>

        <TextView
            style="@style/general_textstyle"
            android:textStyle="bold"
            android:textSize="10sp"
            android:text="Rp."
            android:layout_toEndOf="@id/menulist_imageview"
            android:layout_below="@id/menulist_description_TV"
            android:layout_marginStart="10dp"
            android:id="@+id/menulist_RP"
            android:layout_marginVertical="5dp"/>
        <TextView
            style="@style/general_textstyle"
            android:layout_width="100dp"
            android:textStyle="bold"
            android:textSize="10sp"
            android:text="35.000"
            android:layout_toEndOf="@id/menulist_RP"
            android:layout_below="@id/menulist_description_TV"

            android:layout_marginVertical="5dp"
            android:singleLine="true"
            android:id="@+id/menulist_harga_TV"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            style="@style/general_textstyle"
            android:textSize="10sp"
            android:text="Ubah"
            android:textColor="#CCA235"
            android:background="@drawable/rounded_stroke"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:layout_toRightOf="@id/menulist_description_TV"
            android:layout_marginStart="10dp"
            android:id="@+id/menulist_ubah_TV"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            style="@style/general_textstyle"
            android:textSize="10sp"
            android:text="Hapus"
            android:textColor="@color/white"
            android:background="@drawable/corner_bg"
            android:backgroundTint="@color/red"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:layout_toRightOf="@id/menulist_description_TV"
            android:layout_below="@id/menulist_ubah_TV"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            />




    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>


</LinearLayout>


